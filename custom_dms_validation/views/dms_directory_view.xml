<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dms_directory_form_view_inherit" model="ir.ui.view">
        <field name="name">DMS Directory form view inherit</field>
        <field name="model">dms.directory</field>
        <field name="inherit_id" ref="dms.view_dms_directory_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_root_directory']" position="after">
                <field name="need_validation"/>
            </xpath>
        </field>
    </record>
</odoo>